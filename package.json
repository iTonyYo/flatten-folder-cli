{
  "bin": {
    "flatten-folder": "esm/cli.js"
  },
  "scripts": {
    "cli": "./esm/cli.js --help",
    "build": "npx babel-node ./scripts/clean-built && npx babel-node ./scripts/build",
    "clean": "npx babel-node ./scripts/clean",
    "license": "npx babel-node ./scripts/license",
    "reprepare": "npx babel-node ./scripts/re-prepare",
    "lint": "npx eslint --cache .",
    "test": "cross-env NODE_ENV=test npx babel-node ./scripts/test",
    "changelog": "npx auto-changelog -p"
  },
  "engines": {
    "node": ">=10.13.0"
  },
  "files": [
    "esm/**/*.js"
  ],
  "name": "flatten-folder-cli",
  "description": "递归扁平化指定文件夹内所有文件。",
  "dependencies": {
    "arrify": "^2.0.1",
    "flatten-folder": "^1.0.3",
    "gradient-string": "^1.2.0",
    "meow": "^5.0.0",
    "redent": "^3.0.0",
    "update-notifier": "^3.0.1"
  },
  "git": {
    "core.editor": "code"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "auto-changelog": {
    "output": "UPDATELOG.md",
    "template": "changelog-template.hbs",
    "unreleased": true,
    "commitLimit": false,
    "includeBranch": [
      "master"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parser": "babel-eslint",
    "rules": {
      "no-console": 0,
      "no-undef": 0,
      "no-class-assign": 0,
      "no-useless-catch": 0
    }
  },
  "eslintIgnore": [
    "benchmark/**",
    "docs/**",
    "*-test.js",
    "esm/**",
    ".github/**",
    ".vscode/**",
    "scripts/**"
  ],
  "mocha": {
    "extension": [
      "js"
    ],
    "timeout": 120000,
    "ui": "tdd",
    "color": true,
    "delay": true,
    "fullStackTrace": true,
    "checkLeaks": true,
    "retries": 2
  },
  "nyc": {
    "all": true,
    "check-coverage": false,
    "per-file": true,
    "reporter": [
      "html"
    ],
    "report-dir": "./docs/coverage",
    "cache": false,
    "exclude": [
      "esm/**",
      "benchmark/**",
      "docs/**",
      "scripts/**"
    ],
    "skip-empty": true,
    "clean": true
  },
  "gitignore": [
    "macOS",
    "Windows",
    "Linux",
    "Node",
    "VisualStudioCode",
    "SublimeText",
    "CVS",
    "Diff",
    "Vim",
    "TortoiseGit",
    "Diff",
    "Patch"
  ],
  "private": false,
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/node": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "auto-changelog": "1.16.1",
    "babel-eslint": "^10.0.3",
    "babel-plugin-add-module-exports": "^1.0.2",
    "chai": "^4.2.0",
    "chalk": "^2.4.2",
    "cross-env": "^6.0.3",
    "eslint": "^6.5.1",
    "execa": "^2.0.5",
    "fast-glob": "^3.1.0",
    "license-checker": "^25.0.1",
    "listr": "^0.14.3",
    "make-dir": "^3.0.0",
    "mocha": "^6.2.1",
    "nyc": "^14.1.1",
    "p-map": "^3.0.0",
    "trash": "^6.0.0",
    "write-file-atomic": "^3.0.0"
  },
  "keywords": [
    "flattendir",
    "folder",
    "文件夹",
    "flat",
    "扁平化",
    "fs",
    "cli",
    "脚手架",
    "scaffold",
    "工具",
    "tool",
    "oopsunome"
  ],
  "version": "1.1.4",
  "author": {
    "name": "iyowei",
    "email": "swzyocowboy@icloud.com",
    "url": "https://github.com/iTonyYo"
  },
  "repository": {
    "url": "git@github.com:iTonyYo/flatten-folder-cli.git",
    "type": "git"
  },
  "homepage": "https://github.com/iTonyYo/flatten-folder-cli",
  "bugs": "https://github.com/iTonyYo/flatten-folder-cli/issues",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
